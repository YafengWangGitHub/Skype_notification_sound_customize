# this file allows you to set special notification sounds for specific contacts

from skpy import Skype
import time
from pygame import mixer

i = 0
sk = Skype('username', 'password') # modify here
print(sk.conn)

print(sk.contacts["live:yourContactsName"]) # the skype name of your contacts
print(sk.contacts["live:yourContactsName"].chat)
sk.chats["8:live:yourContactsName"].getMsgs() # the "8:" is required"
ch = sk.chats["8:live:yourContactsName"]
mixer.init() 
mixer.music.load("music.mp3") # the music should be under same folder with this file

while True:
    while sk.chats["8:live:yourContactsName"].getMsgs():
        i += 1
        if i > 7:
            print(str(sk.chats["8:live:yourContactsName"].getMsgs()))
            mixer.music.play()

